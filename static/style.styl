primaryDisabled = #FCB267
primary = #C76F16
primaryHover = #A35505
primaryActive = #7A3E00
accent = #11647C
darkGray = #4F463D
lightGray = #F5ECE3
white = #FFFFFF


html, body
	height 100%
	width 100%
	margin 0
	padding 0
.logo
	font-family: 'Raleway', sans-serif
.landing
	background-color: black
	color: lightGray
	height 100%
	width 100%
	.bg
		height 100%
		width 100%
		background-image: linear-gradient(rgba(199, 111, 22, 0.2), rgba(199, 111, 22, 0.2)), url(/img/modified.jpg)
		background-position center center
		background-repeat no-repeat
		display flex
		flex-direction column
	.centerBox
		max-width 100%
		margin auto
		// color white
		display flex
		flex-direction column
		.logo
			// font-size 1000%
			font-size 20vmin
			text-align center
		.loginButton
			color inherit
			font-style inherit
			margin auto
			background-color transparent
			border solid
			border-width 2px
			border-radius 5px
			border-color white
			padding 20px 50px
			font-weight 200%
			font-size 110%
			letter-spacing 3px
		img
			max-width 100%
			max-height 200px
.navbar
	margin-bottom 0px
.emptyNavSpacing
	height 72px
	@media (min-width: 768px) {
		height 52px
	}
.starredProductCard
	background-color: #d9edf7

.orderSummaryScreen, .orderCatalogScreen, .orderListScreen, .dashboard, .account, .bars, .notfound, .newBar, .barflyContainer
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	padding: 1em
	padding-top: 4em
	color: darkGray

.newBar, .newDistributor, .newRep, .editRep
	form
		display: flex;
		flex-direction: column;
		flex-wrap: nowrap;
		input
			flex-grow: 1
			padding: 1em
			border-style: solid;
			border-color: lightGray
			border-width: 1px;
			width: 100%
			box-sizing: border-box;
			display: block;

.dashboard
	button
		margin-bottom: 1em

.catalogSearch
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
	input
		flex-grow: 1
		padding: 1em
		border-style: solid;
		border-color: lightGray
		border-width: 1px;
		width: 100%
		box-sizing: border-box;
		display: block;
	button.barfly.primary
		flex-shrink: 1
		width: unset;

button.barfly
	color: lightGray
	border: none
	border-radius: 3px
	padding: 1em
	letter-spacing: 0.25em
	text-transform: uppercase;
	box-sizing: border-box;
	width: 100%
	&:hover
		background-color: primaryHover
	&:active
		background-color: primaryActive
	&[disabled]
		background-color: primaryDisabled
	&.primary
		background-color: primary
	&.emphasis
		background-color: accent

.barfly.list
	margin: 1em 0
	> div
		border-top: 1px solid lightGray
		display: flex;
		flex-direction: row;
		flex-wrap: nowrap;
		.listItemContents
			flex-grow: 1
			padding: 1em
			> *
				margin: 0.5em 0
 		.listItemRight
			display: flex;
			border-left 1px solid lightGray
			i
				padding: 1em
				margin: auto;

.barfly.nav
	position: fixed;
	z-index: 99
	width: 100%
	background-color: primary
	color: lightGray
	text-transform: uppercase;
	letter-spacing: 0.25em
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
	.home
		border-right: 1px solid lightGray
		display: flex;
		margin-right: auto;
		.back
			padding: 0 1em
			margin: auto;
		.logo
			padding: 0 1em
			margin: auto;
			text-transform: lowercase;
			font-family: 'Raleway', sans-serif
			letter-spacing: normal;
	.cart
		button
			background-color: accent
	.hamburger
		button
			background-color: primary
	.hamburger, .cart
		background-color: inherit;
		border-left: 1px solid lightGray
		button
			border: none
			padding: 1em
			display: block;
		.dropdown
			border-bottom-left-radius: 5px
			position: absolute;
			background-color: inherit;
			top: auto
			right: 0px
			box-shadow: -1px 1px 10px darkGray
			z-index: 101
			ol
				list-style-type: none
				list-style-position: inside;
				list-style-image: none;
				padding: 0
				margin: 0
				text-align: right;
				li
					padding: 1em;
					border-top: 1px solid lightGray
					&.emphasis
						background-color: accent
		.clickCatcher
			position: fixed;
			top: 0
			left: 0
			height: 100vh
			width: 100vh
			z-index: 100
